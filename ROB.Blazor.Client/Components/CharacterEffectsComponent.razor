@using ROB.Blazor.Shared.Interfaces.CombatTracker

<div class="character-details transition-height-scale" style="@GetCollapsedState()">
    <span class="oi oi-pulse" style="color:@(Character.GetFactionColor(Hidden))"></span>
    <div class="list-wrapper">
        <CharacterListableItemComponent Title="Effects" ListedItems="Character.Effects" Actionable="false"></CharacterListableItemComponent>
    </div>
</div>

@code {
    [CascadingParameter(Name = "Character")]
    protected ICharacter Character { get; set; }

    [Parameter]
    public bool Hidden { get; set; }

    private string GetCollapsedState()
    {
        double itemScale = 2.5;
        int height = (int)Math.Round(3 + itemScale * Math.Max(Character.Effects.Count, 1));
        if (Hidden)
            return "max-height: 0;";
        else
            return $"max-height: {height}rem;";
    }
}
