@model ROB.Web.Models.CharacterSheetModel
@{
    ViewData["Title"] = "Character Sheet";
}

<br />
<div>
    <input hidden data-variable="BASE_STR" data-priority="1" data-expression="LVL = 1" data-expression-enabled="true" value="0" />
    <input hidden data-variable="LVL" data-priority="2" data-expression="LVL = 1" value="0" />
    <div data-variable="LVL"></div>
    <input hidden data-variable="STR" data-expression="STR = BASE_STR + (LVL * 2) - 2" value="0" />
    <div data-variable="STR"></div>
    <input hidden data-variable="HP" data-expression="HP = 110" value="0" />
    <div data-variable="HP"></div>


    <input hidden data-variable="ITEM_1" data-expression="HP = HP + 20" value="0" />
    <div>ITEM 1</div>
    <!-- Character Name -->
    <div id="sheetId" data-id="@Model.Id"></div>
    <div class="row border rounded card">
        <h1 id="characterName">@Model.Name</h1>
    </div>
    <div class="row border rounded card">
        <div class="col-12" onclick="sideBarLevel()">
            <span class="font-weight-bold">Level: </span>
            <input id="level" name="level" type="hidden" value="@Model.Level" readonly />
            <span id="levelDisplay">@Model.Level</span>
        </div>
        <div class="col-12" onclick="sideBarLuck()">
            <span class="font-weight-bold">Luck: </span>
            <input id="luck" name="luck" type="hidden" value="@Model.Race.Luck" readonly />
            <span id="luckDisplay">@Model.Race.Luck</span>
        </div>
        <div class="col-12 col-md-2">
            <span class="font-weight-bold">Race: </span>
            <input id="race" name="race" type="hidden" value="@Model.RaceId" readonly />
            <span id="raceDisplay">@Model.Race.Name</span>
        </div>
        <div class="col-12 col-md-2">
            <span class="font-weight-bold">Size: </span>
            <input id="size" name="size" type="hidden" value="@Model.Race.Size" readonly />
            <span id="sizeDisplay">@Model.Race.Size</span>
        </div>
        <div class="col-12 col-md-2">
            <span class="font-weight-bold">Alignment: </span>
            <input id="alignment" name="alignment" type="hidden" value="11" readonly />
            <span id="alignmentDisplay">Light</span>
        </div>
    </div>

    <!-- Attributes -->
    <div class="row">
        <main-attribute name="Strength" variable="strength" base-value="@Model.Strong" modifier-value="@Model.StrongModifier"></main-attribute>
        <main-attribute name="Fortitude" variable="fortitude" base-value="@Model.Robust" modifier-value="@Model.RobustModifier"></main-attribute>
        <main-attribute name="Dexterity" variable="dexterity" base-value="@Model.Agile" modifier-value="@Model.AgileModifier"></main-attribute>
        <main-attribute name="Accuracy" variable="accuracy" base-value="@Model.Precision" modifier-value="@Model.PrecisionModifier"></main-attribute>
        <main-attribute name="Intellect" variable="intellect" base-value="@Model.Knowledgeable" modifier-value="@Model.KnowledgeableModifier"></main-attribute>
        <main-attribute name="Resolve" variable="resolve" base-value="@Model.Headstrong" modifier-value="@Model.HeadstrongModifier"></main-attribute>
        <main-attribute name="Influence" variable="influence" base-value="@Model.Charismatic" modifier-value="@Model.CharismaticModifier"></main-attribute>
        <main-attribute name="Demeanor" variable="demeanor" base-value="@Model.Attractive" modifier-value="@Model.AttractiveModifier"></main-attribute>
    </div>

    <!-- Everything Else -->
    <div class="row">
        <div class="col-12 col-md-6">
            <div class="row">
                <div class="col border rounded card">
                    <span class="font-weight-bold">Movement</span>
                    <div class="row">
                        <div class="col-6 col-md-4">
                            Walk
                        </div>
                        <div class="col-6 col-md-8">
                            <input id="walk" name="walk" type="hidden" value="@Model.Race.Walk" readonly />
                            <input id="walkModifier" name="walkModifier" type="hidden" value="0" readonly />
                            <div id="walkDisplay">@Model.Race.Walk</div>
                        </div>

                        <div class="col-6 col-md-4">
                            Tactical
                        </div>
                        <div class="col-6 col-md-8">
                            <input id="tactical" name="tactical" type="hidden" value="@Model.Race.Tactical" readonly />
                            <input id="tacticalModifier" name="tacticalModifier" type="hidden" value="0" readonly />
                            <div id="tacticalDisplay">@Model.Race.Tactical</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 col-md-4">
                            Sprint
                        </div>
                        <div class="col-6 col-md-8">
                            <input id="sprint" name="sprint" type="hidden" value="@Model.Race.Sprint" readonly />
                            <input id="sprintModifier" name="sprintModifier" type="hidden" value="0" readonly />
                            <div id="sprintDisplay">@Model.Race.Sprint</div>
                        </div>
                        <div class="col-6 col-md-4">
                            Reaction
                        </div>
                        <div class="col-6 col-md-8">
                            <input id="reaction" name="reaction" type="hidden" value="0" readonly />
                            <input id="reactionModifier" name="reactionModifier" type="hidden" value="0" readonly />
                            <div id="reactionDisplay">0</div>
                        </div>
                    </div>
                </div>
                <div class="col border rounded card">
                    <span class="font-weight-bold">Awareness</span>
                    <div class="row">
                        <div class="col-6 col-md-4">
                            Listen
                        </div>
                        <div class="col-6 col-md-8">
                            <input id="listen" name="listen" type="hidden" value="0" readonly />
                            <input id="listenModifier" name="listenModifier" type="hidden" value="0" readonly />
                            <div id="listenDisplay">0</div>
                        </div>
