        <div class="col-12 col-md-6 border rounded card">
            <!-- Nav Buttons -->
            <ul class="nav nav-pills" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="pill" href="#actions">Actions</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="pill" href="#child_skills">Child-Skills</a>
                </li>
                <li class="nav-item">
