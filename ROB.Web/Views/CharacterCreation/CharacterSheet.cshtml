                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div id="actions" class="container tab-pane active">
                    <br>
                    <h3>Actions</h3>
                    <p>This will display the actions.</p>
                </div>
                <div id="child_skills" class="container tab-pane fade">
                    <br>
                    <h3>Child-Skills</h3>
                    <br />
                    <div class="row">
                        <div class="col">
                            Name
                        </div>
                        <div class="col">
                            Feat Value (FV)
                        </div>
                    </div>
                    @foreach (var item in Model.ChildSkills)
                    {
                        <div class="row">
                            <div class="col">
                                <input type="checkbox"
                                       name="assignedRaces"
                                       value="@item.ChildSkill.Id"
                                       checked="checked" />
                                <a class="btn btn-primary" data-toggle="collapse" href="#childCollapse_@item.ChildSkill.Id" role="button" aria-expanded="false" aria-controls="collapseExample">@item.ChildSkill.Name</a>
                            </div>

                            <div class="col">
                                <input id="range" name="range" type="hidden" value="0" readonly />
                                <input id="rangeModifier" name="rangeModifier" type="hidden" value="0" readonly />
                                <div id="rangeDisplay">0</div>
                            </div>
