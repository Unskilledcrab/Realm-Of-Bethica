@model IEnumerable<ROB.Web.Models.SpellModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArcaneSphere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArcaneTargetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpellLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SizeLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Save)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CastingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Damage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Armor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArcaneSphere.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArcaneTargetNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpellLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Range.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeLimit.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Save.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CastingTime.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Damage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Armor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Movement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
