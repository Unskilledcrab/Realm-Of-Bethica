@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<section>
    <form method="post">
        <div class="BG-Image">
            <div class="container text-center Container">
                <div class="text-uppercase text-center Main-Div">
                    <div class="row">
                        <div class="col-1 col-lg-1 col-xl-4">
                            <p></p>
                        </div>
                        <div class="col-xl-4">
                            <div class="row justify-content-center">
                                <div class="col-12 mt-222"><img class="img-fluid rob-logo=img" src="~/images/_BStudio/Login-Page/1logo.png"></div>
                            </div>
                            <div class="row justify-content-center">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="col-12 Login-AcctNm">
                                        <input asp-for="Input.UserName" class="Login" placeholder="Account Name" />
                                    </div>
                                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                </div>
                            <div class="row justify-content-center">
                                <div class="col-12" style="margin-top: 30px;">
                                    <input asp-for="Input.Password" class="Login" src="~/images/_BStudio/Frames/1Login-btn.png" placeholder="Password" />
                                </div>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col text-black-50" style="margin-top: 70px;">
                                    <div class="form-check text-capitalize text-center Login-RM">

                                        <input asp-for="Input.RememberMe" class="form-check-input" />
                                        <label asp-for="Input.RememberMe" class="form-check-label h5, c2">
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col Login-btn">
                                    <button type="submit" class="btn btn-primary Blank-btn">
                                        <img class="img-fluid" src="~/images/_BStudio/Frames/1Login-btn.png">
                                    </button>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 text-center">
                                    <a class="text-capitalize h5, c2" asp-page="./ForgotPassword">Forgot your password?</a>
                                </div>
                                <div class="col-12 col-sm-6 col-md-4 col-lg-4 col-xl-4 text-center Txt-Align-Lt">
                                    <a class="text-capitalize h5, c2" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
